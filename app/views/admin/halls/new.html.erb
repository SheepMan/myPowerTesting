<%= form_tag admin_tips_path, :method => 'post' do %>
  <%= label_tag :name, 'Name' %>
  <%= text_field :hall_name, 'name' %>
  
  <%= label_tag :streamid, 'Id' %>
  <%= text_field :hall_id, 'id' %>

  <%= label_tag :green_features, 'Green Features' %>
  <% @GreenFeature.each do |feature| %>
    <label class="checkbox">
      <%= check_box_tag "GreenFeature[#{feature.name}]", 1, @GreenFeature.include?(feature)%>
      <%= feature.name %>
    </label>
  <% end %>

  <br/>

  <%= submit_tag 'Create Hall', :class => 'btn btn-success' %>
<% end %>

<script type="text/javascript" src="/assets/jquery.wysiwyg.js"></script>
<script type="text/javascript">
  $(function () {
    $('#editor').wysiwyg({
      initialContent: '',
      css: '/assets/admin/bootstrap.css'
    });
  });
</script>
