<%= form_tag admin_tip_path(@tip), :method => 'put' do %>
  <%= label_tag :title, 'Title' %>
  <%= text_field :tip, 'title' %>

  <%= submit_tag 'Update Hall', :class => 'btn btn-success' %>
<% end %>

<%= button_to 'Delete Hall', admin_hall_path(@tip), :method => :delete, :confirm => "Are you sure?", :class => 'btn btn-danger'%> 

<script type="text/javascript" src="/assets/jquery.wysiwyg.js"></script>
<script type="text/javascript">
  $(function () {
    $('#editor').wysiwyg({
      initialContent: '',
      css: '/assets/admin/bootstrap.css'
    });
  });
</script>

