<h3>Update Building</h3>
<%= form_tag admin_hall_path(@hall), :method => 'put' do %>
  <%= label_tag :name, 'Name' %>
  <%= text_field(:hall, :name) %>
  
  <%= label_tag :background, 'Description' %>
  <%= text_area(:hall, :background, :size=>"30x10") %>

  <%= label_tag :energy_info, 'Energy Projects' %>
  <%= text_area(:hall, :energy_info, :size=>"30x10") %>

  <%= label_tag :features, 'Features' %>
  <% @features.each do |feature| %>
    <label class="checkbox">
      <%= check_box_tag "features[#{feature.name}]", 1, @hall.hall_features.include?(feature)%>
      <%= feature.full_name %>
    </label>
  <% end %>

  <br/>
  <%= submit_tag 'Update Building', :class => 'btn btn-success' %>
<% end %>

<%= button_to 'Delete Building', admin_hall_path(@hall), :method => :delete, :confirm => "Are you sure?", :class => 'btn btn-danger'%> 

<a href="/admin/halls"><button class="btn">Cancel</button></a>

<script type="text/javascript" src="/assets/jquery.wysiwyg.js"></script>
<script type="text/javascript">
  $(function () {
    $('#editor').wysiwyg({
      initialContent: '',
      css: '/assets/admin/bootstrap.css'
    });
  });
</script>

