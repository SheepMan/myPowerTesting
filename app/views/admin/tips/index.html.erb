<% if flash[:notice] %>
  <div class="alert alert-success">
    <a class="close" data-dismiss="alert">×</a>
    <h4 class="alert-heading"><%=flash[:notice]%></h4>
  </div>
<% end %>

<% if flash[:error] %>
  <div class="alert alert-error">
    <a class="close" data-dismiss="alert">×</a>
    <h4 class="alert-heading"><%=flash[:error]%></h4>
  </div>
<% end %>

<a href="/admin/tips/new">
  <button class="btn">
    New Tip
  </button>
</a>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Category</th>
      <th>Content</th>
    </tr>
  </thead>
  <tbody>
  <% @tips.each do |tip| %>
  <tr>
    <td><%= link_to tip.title, admin_tip_path(tip)%></td>
    <td>
      <% tip.categories.each_index do |i|%>
	        <%= tip.categories[i].name %><% if i + 1 != tip.categories.length %>,<% end %>
      <% end %>
    </td>
    <td><%=tip.content%></td>
  </tr>
  <% end %>
</table>

<a href="/admin/tips/new">
  <button class="btn">
    New Tip
  </button>
</a>
