<!DOCTYPE html>
<html>
<head>
  <title>UC Berkeley Energy Management</title>
  <%= stylesheet_link_tag    "mobile" %>
  <%= javascript_include_tag "mobile" %>
  <%= csrf_meta_tags %>  <link rel="stylesheet" href="http://code.jquery.com/mobile/1.0.1/jquery.mobile-1.0.1.min.css" />
  <script src="http://code.jquery.com/jquery-1.6.4.min.js"></script>
  <script src="http://code.jquery.com/mobile/1.0.1/jquery.mobile-1.0.1.min.js"></script>
  <meta name="viewport" content="user-scalable=no,initial-scale=1,maximum-scale=1" />
  <script type="text/javascript">
  function displayFeedbackForm(){
  	$("#feedback-form").css("display" ,"block");
  }
  function hideFeedbackForm(){
  	$("#feedback-form").css("display" ,"none");
  }
</script>

  <style>
	.rotate {

		/* Safari */
		-webkit-transform: rotate(-90deg);

		/* Firefox */
		-moz-transform: rotate(-90deg);

		/* IE */
		-ms-transform: rotate(-90deg);

		/* Opera */
		-o-transform: rotate(-90deg);

		/* Internet Explorer */
		filter: progid:DXImageTransform.Microsoft.BasicImage(rotation=3);
	}
	#feedback-widget{
		position: fixed;
		top: 50%;
		right:-34px;
		background-color: #008B00;
		color:#FFFFFF;
		padding: 10px;
		-webkit-border-top-left-radius: 10px;
		-webkit-border-top-right-radius: 10px;
		-moz-border-radius-topleft: 10px;
		-moz-border-radius-topright: 10px;
		border-top-left-radius: 10px;
		border-top-right-radius: 10px;
		cursor: pointer;
	}
	#feedback-form{
		display: none;
		position: fixed;
		top: 30%;
		left: 38%;
		z-index: 999;
		padding: 50px;
		background-color: #F8F8FF;
		border-radius: 10px;
		border: solid;
		border-width: 2px;
		border-color: #2F4F4F;
	}
	#message{
		height: 15em;
		width: 20em;
		margin-bottom: 2em;
	}
	#feedback-exit{
		cursor: pointer;
		background-image:url(<%=asset_path "exit_button.png"%>);

		float:right;
		height: 30px;
		width: 30px;
	}
  </style>
</head>
<body>
<div class="rotate" id="feedback-widget" onClick="displayFeedbackForm();"> FEEDBACK </div>
	<div id="feedback-form">
		<div id="feedback-exit" onClick="hideFeedbackForm();"></div>
		<%= form_tag "emailer/submit_feedback" do -%>
			Please enter your feedback:
			<%= text_area_tag 'message' %>
			<%= submit_tag 'Submit' %>
		<% end -%>
	</div>
<%= yield %>

</body>
</html>
